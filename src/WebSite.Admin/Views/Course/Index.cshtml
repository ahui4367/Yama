@{
    Layout = null;
}

<!DOCTYPE html>

<html style="height: 100%; overflow: hidden">
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/easyui")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/easyui")
    @Scripts.Render("~/Scripts/jquery.easyui.min.js")
    @Scripts.Render("~/Scripts/jquery.uploadify.min.js")
    @Scripts.Render("~/scripts/views/course.js")

    <style type="text/css">
        #fm{
            margin:0;
            padding:10px 30px;
        }
        .ftitle{
            font-size:14px;
            font-weight:bold;
            padding:5px 0;
            margin-bottom:10px;
            border-bottom:1px solid #ccc;
        }
        .fitem{
            margin-bottom:5px;
        }
        .fitem label{
            display:inline-block;
            width:60px;
        }
        .fitem input {
            width:200px
        }
</style>
</head>
<body style="margin: 0px 0px; height: 100%; overflow: hidden; padding: 5px 5px">
    <div id="menubar" style="padding: 5px; height: auto">
        <div style="margin-bottom: 3px">
            <a href="#" class="easyui-linkbutton" iconcls="icon-add" plain="true" onclick="addCourse()">添加课件</a>
            <a href="#" class="easyui-linkbutton" iconCls="icon-edit" plain="true" onclick="modUser()">修改用户</a>
            <a href="#" class="easyui-linkbutton" iconCls="icon-remove" plain="true" onclick="delUser()">删除用户</a>
        </div>
    </div>
    <table id="tab" class="easyui-datagrid" title="用户列表" style="width:1000px; min-height:500px"
        iconcls="icon-filter" data-options="rownumbers:true,singleSelect:true,pagination:true,url:'@Url.Content("~/course/list")',method:'get',toolbar:'#menubar'">
        <thead>
            <tr>
                <th field="CourseName" width="80">课件名称</th>
                <th field="Type" width="100">课件种类</th>
                <th field="Limit" width="80">限时</th>
                <th field="Created" width="150">创建时间</th>
                <th field="Lastmodified" width="150">最后修改时间</th>
            </tr>
        </thead>
    </table>

    <div id="dlg" class="easyui-dialog" style="width:400px;height:480px;padding:0px 0px;overflow: hidden;"
        closed="true" buttons="#dlg-buttons">
    </div>
</body>

</html>
