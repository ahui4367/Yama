@{
    Layout = null;
}
<!DOCTYPE html>

<html style="height: 100%; overflow: hidden">
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/easyui")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/easyui")
    @Scripts.Render("~/Scripts/jquery.easyui.min.js")
    @Scripts.Render("~/Scripts/jquery.uploadify.min.js")
    @Scripts.Render("~/Scripts/swfobject.js")
    @Scripts.Render("~/Scripts/jquery.slides.min.js")
    @Scripts.Render("~/scripts/views/video.js")

</head>
<body style="margin: 0px 0px; height: 100%; overflow: hidden; padding: 5px 5px">
    <div id="menubar" style="padding: 5px; height: auto">
        <div style="margin-bottom: 3px">
            <a href="#" class="easyui-linkbutton" iconcls="icon-add" plain="true" onclick="addVideo()">添加视频</a>
            <a href="#" class="easyui-linkbutton" iconCls="icon-edit" plain="true" onclick="modVideo()">修改视频</a>
            <a href="#" class="easyui-linkbutton" iconCls="icon-remove" plain="true" onclick="delVideo()">删除视频</a>
            <a href="#" class="easyui-linkbutton" iconCls="icon-reload" plain="true" onclick="reload()">刷新列表</a>

            <input class="easyui-searchbox" data-options="prompt:'请输入查询内容',menu:'#mm',searcher:doSearch" style="margin-left:50px;width:220px"></input>
            <div id="mm">
                <div data-options="name:'1',iconCls:'icon-help'">视频文件</div>
                <div data-options="name:'2',iconCls:'icon-search'">备注</div>
            </div>
        </div>
    </div>
    <table id="tab" class="easyui-datagrid" title="视频文件列表" style="width:1000px; min-height:550px"
        iconcls="icon-filter" rownumbers="true" singleSelect="true" pagination="true"
        method="get" toolbar="#menubar" fitColumns="true" autoRowHeight="true" loadMsg="读取中..." pageSize="30">
        <thead>
            <tr>
                <th field="VideoName" width="180">文件名称</th>
                <th field="Comment" width="380">文件备注</th>
                <th field="Created" width="150">创建时间</th>
                <th field="LastModified" width="150">最后修改时间</th>
            </tr>
        </thead>
    </table>

    <div id="dlg" class="easyui-dialog" style="width:800px;height:600px;padding:0px 0px;overflow: hidden;"
        closed="true" buttons="#dlg-buttons">
        <div class="easyui-layout" data-options="fit:true">
            
            <form id="fm" method="post" novalidate>
                <input type="hidden" id="hdnDocID" name="DocID" value="-1"/>
                <div data-options="region:'south',split:true,title:'文档备注信息',tools:'toolbar_media'" style="height:120px;">
                    <textarea name="Comment" id="Comment" class="easyui-validatebox" required="true" rows="5" cols="130"></textarea>
                </div>
                <div data-options="region:'center',title:'媒体信息'" style="padding:0px">
                    <div id="mediarea" style="width:100%;height:100%"></div>
                </div>
            </form>
        </div>
        <div id="dlg-buttons">
            <a href="#" id="uploady-doc"/>
            <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-ok" onclick="save()">保存</a>
            <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-cancel" onclick="javascript:$('#dlg').dialog('close')">取消</a>
        </div>
     </div>
</body>

</html>
