@{
    Layout = null;
}

<!DOCTYPE html>

<html style="height: 100%; overflow: hidden">
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/easyui")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/easyui")
    @Scripts.Render("~/Scripts/jquery.easyui.min.js")
    @Scripts.Render("~/scripts/views/organization.js")

    <style type="text/css">
        #fm{
            margin:0;
            padding:10px 30px;
        }
        .ftitle{
            font-size:14px;
            font-weight:bold;
            padding:5px 0;
            margin-bottom:10px;
            border-bottom:1px solid #ccc;
        }
        .fitem{
            margin-bottom:5px;
        }
        .fitem label{
            display:inline-block;
            width:60px;
        }
        .fitem input {
            width:200px
        }
</style>
</head>
<body style="margin: 0px 0px; height: 100%; overflow: hidden; padding: 5px 5px">
    <div id="menubar" style="padding: 5px; height: auto">
        <div style="margin-bottom: 3px">
            <a href="#" class="easyui-linkbutton" iconcls="icon-add" plain="true" onclick="addOrgan()">增加</a>
            <a href="#" class="easyui-linkbutton" iconCls="icon-edit" plain="true" onclick="modOrgan()">修改</a>
            <a href="#" class="easyui-linkbutton" iconCls="icon-remove" plain="true" onclick="delOrgan()">删除</a>
        </div>
    </div>
    <table id="tab" class="easyui-datagrid" title="单位列表" style="width:800px; min-height:500px"
        iconcls="icon-filter" data-options="rownumbers:true,singleSelect:true,url:'@Url.Content("~/organ/list")',method:'get',toolbar:'#menubar'">
        <thead>
            <tr>
                <th field="Orgname" width="300">单位名称</th>
                <th field="Created" width="150">创建时间</th>
                <th field="Lastmodified" width="150">最后修改时间</th>
            </tr>
        </thead>
    </table>

    <div id="dlg" class="easyui-dialog" style="width:400px;height:180px;padding:10px 20px"
        closed="true" buttons="#dlg-buttons">
        <div class="ftitle">单位信息</div>
        <form id="fm" method="post" novalidate>
            <input type="hidden" name="Oid" />
            <div class="fitem">
                <label for="ucode">单位名称:</label><input name="Orgname" id="Orgname" class="easyui-validatebox" required="true" />
            </div>
        </form>
        <div id="dlg-buttons">
            <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-ok" onclick="saveOrgan()">保存</a>
            <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-cancel" onclick="javascript:$('#dlg').dialog('close')">取消</a>
        </div>
    </div>
</body>
</html>
