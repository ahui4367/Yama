@{
    Layout = null;
}

<!DOCTYPE html>

<html style="height: 100%; overflow: hidden">
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/easyui")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/easyui")
    @Scripts.Render("~/Scripts/jquery.easyui.min.js")
    @Scripts.Render("~/scripts/views/accountrole.js")

    <style type="text/css">
        #fm{
            margin:0;
            padding:10px 30px;
        }
        .ftitle{
            font-size:14px;
            font-weight:bold;
            padding:5px 0;
            margin-bottom:10px;
            border-bottom:1px solid #ccc;
        }
        .fitem{
            margin-bottom:5px;
        }
        .fitem label{
            display:inline-block;
            width:60px;
        }
        .fitem input {
            width:200px
        }
</style>
</head>
<body style="margin: 0px 0px; height: 100%; overflow: hidden; padding: 5px 5px">
    <div id="menubar" style="padding: 5px; height: auto">
        <div style="margin-bottom: 3px">
            <a href="#" class="easyui-linkbutton" iconCls="icon-edit" plain="true" onclick="modRole()">修改</a>
        </div>
    </div>
    <table id="tab" class="easyui-datagrid" title="角色列表" style="width:800px; min-height:500px"
        iconcls="icon-filter" data-options="rownumbers:true,singleSelect:true,url:'@Url.Content("~/role/list")',method:'get',toolbar:'#menubar'">
        <thead>
            <tr>
                <th data-options="field:'RoleName',width:80">角色名称</th>
                <th data-options="field:'Created',width:120">创建时间</th>
                <th data-options="field:'LastModified',width:120">最后修改</th>
                <th data-options="field:'Description',width:280">角色备注</th>
            </tr>
        </thead>
    </table>

    <div id="dlg" class="easyui-dialog" style="width:400px;height:280px;padding:10px 20px"
        closed="true" buttons="#dlg-buttons">
        <div class="ftitle">角色信息</div>
        <form id="fm" method="post" novalidate>
            <div class="fitem">
                <label for="rname">角色名称:</label><input name="rname" id="rname" class="easyui-validatebox" required="true" />
            </div>
            <div class="fitem">
                <label for="comment">备注:</label><br />
                <textarea name="comment" id="comment" class="easyui-validatebox" cols="50" rows="3"></textarea>
            </div>
        </form>
        <div id="dlg-buttons">
            <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-ok" onclick="saveUser()">保存</a>
            <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-cancel" onclick="javascript:$('#dlg').dialog('close')">取消</a>
        </div>
    </div>
</body>
</html>
