@{
    Layout = null;
}

<!DOCTYPE html>

<html style="height: 100%; overflow: hidden">
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/easyui")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/easyui")
    @Scripts.Render("~/Scripts/jquery.easyui.min.js")
    @Scripts.Render("~/scripts/views/accountuser.js")

    <style type="text/css">
        #fm{
            margin:0;
            padding:10px 30px;
        }
        .ftitle{
            font-size:14px;
            font-weight:bold;
            padding:5px 0;
            margin-bottom:10px;
            border-bottom:1px solid #ccc;
        }
        .fitem{
            margin-bottom:5px;
        }
        .fitem label{
            display:inline-block;
            width:60px;
        }
        .fitem input {
            width:200px
        }
</style>
</head>
<body style="margin: 0px 0px; height: 100%; overflow: hidden; padding: 5px 5px">
    <div id="menubar" style="padding: 5px; height: auto">
        <div style="margin-bottom: 3px">
            <a href="#" class="easyui-linkbutton" iconcls="icon-add" plain="true" onclick="addUser()">增加用户</a>
            <a href="#" class="easyui-linkbutton" iconCls="icon-edit" plain="true" onclick="modUser()">修改用户</a>
            <a href="#" class="easyui-linkbutton" iconCls="icon-remove" plain="true" onclick="delUser()">删除用户</a>
        </div>
        <hr style="width:100%" />
        <div>
            <table>
                <tr>
                    <td style="padding-left:10px">
                        <label for="txtUser">用户姓名:</label>
                        <input type="text" id="txtUser"/>
                    </td>
                    <td style="padding-left:10px">
                        <label for="txtCard">用户卡号:</label>
                        <input type="text" id="txtCard" />
                    </td>
                    <td style="padding-left:10px">
                        <label for="txtMobile">联系电话:</label>
                        <input type="text" id="txtMobile" />
                    </td>
                    <td style="padding-left:10px">
                        <label for="txtOrgan">所属单位:</label>
                        <input type="text" id="txtOrgan" />
                    </td>
                    <td style="padding-left:10px">
                        <a href="#" class="easyui-linkbutton" data-options="iconCls:'icon-search'" style="width:80px">查找</a>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <table id="tab" class="easyui-datagrid" title="用户列表" style="width:1000px; min-height:500px"
        iconcls="icon-filter" data-options="rownumbers:true,singleSelect:true,pagination:true,url:'@Url.Content("~/user/list")',method:'get',toolbar:'#menubar'">
        <thead>
            <tr>
                <th field="Ucode" width="80">登录名称</th>
                <th field="Uname" width="100">用户姓名</th>
                <th field="Ucard" width="80">用户卡号</th>
                <th field="Email" width="150">联系邮箱</th>
                <th field="Mobile" width="100">手机号码</th>
                <th field="Im" width="100">QQ号码</th>
                <th field="Organ" width="100">所属单位</th>
                <th field="Created" width="150">创建时间</th>
                <th field="Lastmodified" width="150">最后修改时间</th>
            </tr>
        </thead>
    </table>

    <div id="dlg" class="easyui-dialog" style="width:400px;height:480px;padding:10px 20px"
        closed="true" buttons="#dlg-buttons">
        <div class="ftitle">用户信息</div>
        <form id="fm" method="post" novalidate>
            <input type="hidden" name="Uid" value="-1"/>
            <div class="fitem">
                <label for="ucode">登录名称:</label><input name="Ucode" id="ucode" class="easyui-validatebox" required="true" />
            </div>
            <div class="fitem">
                <label for="password">登录密码:</label><input name="Upass" id="password" class="easyui-validatebox" required="true" />
            </div>
            <div class="fitem">
                <label for="uname">用户姓名:</label><input name="Uname" id="uname" class="easyui-validatebox" required="true" />
            </div>
            <div class="fitem">
                <label for="email">电子邮件:</label><input name="Email" id="email" class="easyui-validatebox" />
            </div>
            <div class="fitem">
                <label for="mobile">联系电话:</label><input name="Mobile" id="mobile" class="easyui-validatebox" />
            </div>
            <div class="fitem">
                <label for="im">QQ:</label><input name="Im" id="im" class="easyui-validatebox" />
            </div>
            <div class="fitem">
                <label for="ucard">员工卡号:</label><input name="ucard" id="ucard" class="easyui-validatebox" />
            </div>
            <div class="fitem">
                <label for="">所属单位:</label>
                <input name="Oid" id="Oid" class="easyui-combobox" style="width:200px" required="true" data-options="url:'/organ/all', method:'get',valueField:'Oid',textField:'Orgname'"/>
            </div>
            <div class="fitem">
                <label for="comment">备注:</label><br />
                <textarea name="Comment" id="comment" class="easyui-validatebox" cols="50" rows="3"></textarea>
            </div>
        </form>
        <div id="dlg-buttons">
            <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-ok" onclick="saveUser()">保存</a>
            <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-cancel" onclick="javascript:$('#dlg').dialog('close')">取消</a>
        </div>
    </div>
</body>
</html>
